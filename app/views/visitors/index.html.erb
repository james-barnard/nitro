<!-- Page Content -->
<div class="container">

    <!-- Marketing Icons Section -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Welcome to Nitro Kaffe
            </h1>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-fw"></i> the Blue Vase</h4>
                </div>
                <div class="panel-body">
                    <%= link_to :vending_machines do %>
                      <img class="img-responsive img-portfolio img-hover" src=<%= asset_path 'bluevase.png' %> alt="">
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-fw"></i> the Tree House</h4>
                </div>
                <div class="panel-body">
                    <%= link_to :vending_machines do %>
                      <img class="img-responsive img-portfolio img-hover" src=<%= asset_path 'treehouse.png' %> alt="">
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
<% if user_signed_in? %>
  <% if current_user.try(:vip?) %>
    <li><%= link_to 'Users', users_path %></li>
    <div class="well">
        <div class="row">
            <div class="col-md-8">
                <p>Follow this link for a good brew!!!.</p>
            </div>
            <div class="col-md-4">
              <%= link_to "Demo", particle_buy_path %>
            </div>
        </div>
    </div>
  <% end %>
<% end %>

</div>
<!-- /.container -->

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1750981621841828',
      xfbml      : true,
      version    : 'v2.7'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

<!-- Script to Activate the Carousel -->
<script>
$(document).on('ready', function () {
  $('.carousel').carousel({
      interval: 4000 //changes the speed
  })
});
</script>
